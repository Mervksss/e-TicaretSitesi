
@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>

<div class="container">
    <div class="row" style="margin-top:50px">
        @using(Html.BeginForm("Login", "Login", FormMethod.Post))
        {
            <div class="form-group">
                <div class="row">
                    <div class="col-md-2">
                        <label>Kullanıcı Adı :</label>
                    </div>
                    <div class="col-md-10">
                        <input type="text" name="username" placeholder="kullanıcı adını giriniz." class="form-control" />
                    </div> 
                    <div class="col-md-2">
                        <label>Şifre :</label>
                    </div>
                    <div class="col-md-10">
                        <input type="password" name="password" placeholder="şifreyi giriniz." class="form-control" />
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-10 col-lg-offset-2">
                                <input type="submit" value="Giriş Yap" class="btn btn-default form-control" />
                            </div>
                        </div>
                    </div>                        
               </div>
            </div>
         }        
    </div>
</div>
